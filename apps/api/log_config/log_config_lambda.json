{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json": {
            "class": "src.core.logger.formatter.JsonFormatter"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "json",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.FileHandler",
            "formatter": "json",
            "filename": "/tmp/app.log"
        }
    },
    "loggers": {
        "debug_logger": {
            "level": "DEBUG",
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false
        },
        "console_logger": {
            "level": "INFO",
            "handlers": [
                "console"
            ],
            "propagate": false
        }
    }
}